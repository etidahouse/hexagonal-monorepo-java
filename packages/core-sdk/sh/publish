#!/bin/bash

PROJECT_DIR="$(pwd)"
CURRENT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
WORKING_DIR="$(dirname "$CURRENT_DIR")"
DIRECTORY_NAME=$(basename "$WORKING_DIR")


echo "$DIRECTORY_NAME"


CHANGES_COUNT="$( git diff origin/main HEAD "$WORKING_DIR"/pom.xml | grep -c version || echo "" )"


# Compare versions
if [ "$CHANGES_COUNT" != "0" ]; then
    echo "Change detected. Continuing with Maven deploy..."
else
    echo "No change detected. Exiting without Maven deploy."
    exit 0
fi

# Check for uncommitted changes
if [[ -n $(git status "$WORKING_DIR" -s) ]]; then
    echo "There are uncommitted changes. Exiting "$DIRECTORY_NAME""
    exit 1
fi


if [ ! "$(command -v docker)" ]; then
    echo "docker could not be found"
    exit 0
fi


echo "$DIRECTORY_NAME" Publishing...


docker run -it --rm \
    --name maven-3.8.5-openjdk-17-slim \
    -v "$WORKING_DIR":/opt/maven/ \
    -v "$PROJECT_DIR"/.m2:/root/.m2/repository \
    -w /opt/maven \
    -e GITHUB_USERNAME="$GITHUB_USERNAME" \
    -e GITHUB_TOKEN="$GITHUB_TOKEN" \
    maven:3.8.5-openjdk-17-slim \
    mvn clean deploy
